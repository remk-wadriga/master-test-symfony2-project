{% extends 'FrontendBundle::main.html.twig' %}

{% block scriptFiles %}
    {{ parent() }}
    <script src="{{ asset('bundles/frontend/js/pages/login.js') }}" type="text/javascript"></script>
{% endblock %}

{% block content %}

    <div class="container">

        <div class="row">

            <div class="col-md-4 col-md-offset-4">

                <div class="login-panel panel panel-default">

                    <div class="panel-heading">
                        <h3 class="panel-title">{% trans with {'%name%': app_name} %}Вход в систему "%name%"{% endtrans %}</h3>
                    </div>

                    <div class="panel-body">

                        {% include 'FrontendBundle:forms:loginForm.html.twig' %}

                    </div>

                </div>

            </div>

        </div>

    </div>

{% endblock %}

{% block scripts %}
    {{ parent() }}
    Login.init();
{% endblock %}