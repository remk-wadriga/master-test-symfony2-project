<div id="login-form">

    {% if error %}
        <div>{{ error.message }}</div>
    {% endif %}

    <form action="{{ path('login_check') }}" method="post">
        <fieldset>

            <div class="form-group">
                <input
                    type="text"
                    id="username"
                    name="_username"
                    placeholder="{% trans %}Логин{% endtrans %}"
                    value="{{ lastUsername }}"
                    class="form-control"
                />
            </div>

            <div class="form-group">
                <input
                    type="password"
                    id="password"
                    name="_password"
                    placeholder="{% trans %}Пароль{% endtrans %}"
                    class="form-control"
                />
            </div>

        </fieldset>

        <input type="submit" value="{% trans %}Вход{% endtrans %}" class="btn btn-lg btn-success btn-block" />

    </form>

</div>