<!DOCTYPE html>
<html>

<head>

    {% block meta %}
        <meta charset="utf-8">
        <meta content="IE=edge" http-equiv="X-UA-Compatible">
        <meta content="width=device-width, initial-scale=1" name="viewport">
        <meta content="" name="description">
        <meta content="" name="author">
    {% endblock %}

    {% block title %}
        <title>Master Test</title>
    {% endblock %}

    {% block cssFiles %}
        <link href="{{ asset('bundles/general/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ asset('bundles/general/css/main.css') }}" rel="stylesheet" type="text/css" />
    {% endblock %}

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

    <script src="{{ asset('bundles/general/js/jquery-2.1.1.min.js') }}"></script>

</head>

<body>

<div id="wrapper">

    {% block header %}
    {% endblock %}

    {% block body %}
    {% endblock %}

    {% block footer %}
    {% endblock %}

</div>

{% block modalwindow %}
    {% include('GeneralBundle:partials:modalWindow.html.twig') %}
{% endblock %}

{% block scriptFiles %}
    <script src="{{ asset('bundles/general/js/bootstrap.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/general/js/ext.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/general/js/main.js') }}" type="text/javascript"></script>
{% endblock %}

<script type="text/javascript">

    jQuery(function($){

        {% block scripts %}

            Main.init();

        {% endblock %}

    });

</script>

</body>

</html>